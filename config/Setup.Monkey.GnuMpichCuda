# NOTE: setup for monkey.theochem.kth.se

# C++ compiler & linker

CXX := mpicxx

# Compiler flags for generic intel CPUs

CXX_REL_FLG := -std=c++11 -Wall -Ofast -fopenmp
CXX_DEB_FLG := -std=c++11 -Wall -Ofast -fopenmp -g
CXX_DEB_FLG += 

# Generic preprocessor flags

CPP_REL_FLG := -DVLX_ALIGN=64 -DENABLE_MPI=1 -DENABLE_GPU=1
CPP_DEB_FLG := -DVAR_DEBUG=1 -DVLX_ALIGN=64 -DENABLE_MPI=1 -DENABLE_GPU=1

# CUDA compiler & linker

CUDA_ROOT := /usr/local/cuda
NVCC := ${CUDA_ROOT}/bin/nvcc

NVCC_REL_FLG := -std=c++11 -O3 --compiler-options "-fopenmp"
NVCC_DEB_FLG := -std=c++11 -O3 --compiler-options "-fopenmp"

NVCC_REL_FLG += --compiler-options "-Wall" 
NVCC_DEB_FLG += --compiler-options "-Wall" --compiler-options "-g"

# Google Test root directory

GST_ROOT := /home/xinli/gitlab/fiesta/external/googletest

GST_LIB := /home/xinli/gitlab/fiesta/lib/libgtest.a

# MKL includes

MKL_INCLUDES := $(MKLROOT)/include

# Library includes

LIB_LIST := -L${MKLROOT}/lib -Wl,-rpath,${MKLROOT}/lib -lmkl_intel_lp64
LIB_LIST += -lmkl_intel_thread -lmkl_core -liomp5 -lpthread -lm -ldl
LIB_LIST += -L${CUDA_ROOT}/lib64 -lcuda -lcudart

# Native shell commands

MV := mv -f
RM := rm -f

# Native libraries generation tools

AR      := ar
ARFLAGS := rc
